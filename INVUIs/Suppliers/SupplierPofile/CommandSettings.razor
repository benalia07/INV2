<div>
    
    <div class="row gy-3">

        @if (purchase is null || purchase.Count==0)
        {
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Number</th>
                    <th>Supplier Name</th>
                    <th>Date</th>
                    <th>State</th>
                </tr>
                </thead>
                <tbody>
        
                <tr>
                    <td colspan="4">Unavailable Data</td>
                </tr>
            
                </tbody>
            </table>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Number</th>
                    <th>Supplier Name</th>
                    <th>Date</th>
                    <th>State</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var a in purchase)
                {
                    <tr>
                        <td>@a.Number</td>
                        <td>@Supplier.SupplierName</td>
                        <td>@a.Date</td>
                        <td>@a.Status</td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>