﻿@using INV.Domain.Entities.SupplierEntity
<div class="container-supplier">


	<div class="content-info-suplier">

		<div class="info-box pos-titel-info-supplier">

			<div class="titel-primary">
				<h2>@Supplier.CompanyName</h2>
			</div>

			<div class="titel-secondary">
				<h4> @Supplier.CompanyName</h4>
			</div>
		</div>

		<div class="info-boxs-show">

			<div class="info-box-part1">
				<div class="info-box">
					<div class="info-box-icon"><i class="bi bi-telephone"></i></div>
					<div class="info-box-text">@Supplier.Phone</div>
				</div>
				<div class="info-box">
					<div class="info-box-icon"><i class="bi bi-envelope-at"></i></div>
					<div class="info-box-text">@Supplier.Email</div>
				</div>
			</div>

			<div class="info-box-part2">

				<div class="info-box">
					<div class="info-box-icon"><i class="bi bi-geo-alt"></i></div>
					<div class="info-box-text">@Supplier.Address</div>
				</div>

				<div class="info-box">
					<div class="info-box-icon">RC</div>
					<div class="info-box-text">@Supplier.RC</div>
				</div>
			</div>
		</div>

		@if (display)
		{
			<div class="info-boxs-hide">




				<div class="info-box-part1">

					<div class="info-box">
						<div class="info-box-icon">NIS</div>
						<div class="info-box-text">@Supplier.NIS</div>
					</div>

					<div class="info-box">
						<div class="info-box-icon">NIF</div>
						<div class="info-box-text">@Supplier.NIF</div>
					</div>

					<div class="info-box">
						<div class="info-box-icon">ART</div>
						<div class="info-box-text">@Supplier.ART</div>
					</div>
				</div>

				<div class="info-box-part2">

					<div class="info-box">
						<div class="info-box-icon">RIB</div>
						<div class="info-box-text">@Supplier.RIB</div>
					</div>

					<div class="info-box">
						<div class="info-box-icon">Bank Agency</div>
						<div class="info-box-text">@Supplier.BankAgency</div>
					</div>
				</div>

			</div>
		}



	</div>

	<div class="btn-pos-supplier">
		<button class="btn-custom btn-submit" type="button" @onclick="() => supplierForm.ShowModal()"><i class="bi bi-pen"></i>Edit</button>
		<button class="btn-custom btn-cancel" type="button" @onclick="visibility">more info...</button>
	</div>

</div>

<SupplierForm Supplier="Supplier" @ref="supplierForm" />