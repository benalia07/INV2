@using INVUIs.Models.ProductsModel
@inherits LayoutComponentBase
@using BlazorBootstrap;

<Modal @ref="modal" Title="Edit Product" Size="ModalSize.Large" ModalType="ModalType.Secondary">
    <BodyTemplate>
        <EditForm Model="productModel" OnValidSubmit="UpdateProducts">
            <DataAnnotationsValidator/>
            
            <div class="mb-1">
                <label for="designation" class="form-label">Product Name</label>
                <InputText id="designation" class="form-control" @bind-Value="productModel.Designation"/>
                <ValidationMessage For="@(() => productModel.Designation)"/>
            </div>

            <div class="mb-1">
                <label for="unitMeasure" class="form-label">Unit Measure</label>
                <InputSelect id="unitMeasure" class="form-control" @bind-Value="productModel.UnitMeasure">
                    <option value="KG">kg</option>
                    <option value="L">L</option>
                    <option value="M">M</option>
                    <option value="M2">M2</option>
                </InputSelect>
                <ValidationMessage For="@(() => productModel.UnitMeasure)"/>
            </div>

            <div class="mb-1">
                <label for="quantity" class="form-label">Quantity</label>
                <InputNumber id="quantity" class="form-control" @bind-Value="productModel.Quantity"/>
                <ValidationMessage For="@(() => productModel.Quantity)"/>
            </div>

            <div class="mb-1">
                <label for="unitPrice" class="form-label">Unit Price</label>
                <InputNumber id="unitPrice" class="form-control" @bind-Value="productModel.UnitPrice"/>
                <ValidationMessage For="@(() => productModel.UnitPrice)"/>
            </div>

            <div class="mb-1">
                <label for="tva" class="form-label">TVA</label>
                <InputNumber id="tva" class="form-control" @bind-Value="productModel.TVA"/>
                <ValidationMessage For="@(() => productModel.TVA)"/>
            </div>
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" @onclick="CloseModal">Close</button>
        </EditForm>
    </BodyTemplate>
</Modal>



<style>
    .modal-dialog {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
    }
</style>