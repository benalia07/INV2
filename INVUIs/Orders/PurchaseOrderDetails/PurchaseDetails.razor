        <div class="p-2">@PurchaseOrder.CompletionDelay days</div>
    </div>

    <div class="col-5 col-md-3 bg-light border-bottom border-white border-3">
        <div class="p-2">Date Generated</div>
    </div>
    <div class="col-7 col-md-9 bg-light border-start border-bottom border-white border-3">
        <div class="p-2">@PurchaseOrder.Date</div>
    </div>

    <div class="col-5 col-md-3 bg-light border-bottom border-white border-3">
        <div class="p-2">Type Budget</div>
    </div>
    <div class="col-7 col-md-9 bg-light border-start border-bottom border-white border-3">
        <div class="p-2">@PurchaseOrder.TypeBudget</div>
    </div>

    <div class="col-5 col-md-3 bg-light border-bottom border-white border-3">
        <div class="p-2">Type Service</div>
    </div>
    <div class="col-7 col-md-9 bg-light border-start border-bottom border-white border-3">
        <div class="p-2">@PurchaseOrder.TypeService</div>
    </div>

</div>
