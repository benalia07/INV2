@using INV.Domain.Entities.ProductEntity
@using INVUIs.Models.ProductsModel
@inherits LayoutComponentBase


<table class="table">
    <thead>
    <tr>
        <th>Product Name</th>
        <th>Unit Measure</th>
        <th>TVA</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Action</th>
    </tr>
    </thead>
    <tbody>
    @if (Products != null && Products.Any())
    {
        @foreach (var product in Products)
        {
            <tr>
                <td>@product.Designation</td>
                <td>@product.UnitMeasure</td>
                <td>@product.TVA</td>
                <td>@product.Quantity</td>
                <td>@product.UnitPrice.ToString("N")</td>
                <td>
                    <button class="btn btn-success" @onclick="() => EditProduct(product)"><i class="bi bi-pencil-fill"></i></button>
                    <button class="btn btn-danger" @onclick="()=> DeleteProduct(product.ID)"><i class="bi-trash-fill"></i></button>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="6" class="text-center">No products available</td>
        </tr>
    }
    </tbody>
</table>
